@model IEnumerable<JamesZacka_GoDataFeed_Coding_Demo.Models.Products>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@*<app-products>Products</app-products>*@

<app-root>Stuff</app-root>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
              @*<a asp-action="Edit" asp-route-id="@item.ID">Edit</a>*@
              <a asp-action="_Edit" asp-route-id="@item.ID" data-toggle="modal" data-target="#exampleModalCenter">
                Edit
              </a>|
              @*<a asp-action="Details" asp-route-id="@item.ID">Details</a>*@
              <a asp-action="_Details" asp-controller="Products" asp-route-id="@item.ID" data-toggle="modal" data-target="#exampleModalCenter">
                Details
              </a>|
              @*<a asp-action="Delete" asp-route-id="@item.ID">Delete</a>*@
              <a asp-action="_Delete" asp-controller="Products" asp-route-id="@item.ID" data-toggle="modal" data-target="#exampleModalCenter">
                Delete
              </a>
            </td>
        </tr>
}
    </tbody>
</table>
